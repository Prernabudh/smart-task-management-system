.<%- include("partials/header") %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1><span class="glyphicon glyphicon-th-list"></span>Welcome to SmartWork</h1>
			<p>All the teams are listed below.You can join any of the teams by clicking on join.</p>
		</div>
	</header>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% teams.forEach(function(team){ %>
			<div class="col-md-3 col-sm-6 taskblog">
				<div class="thumbnail">
					<div class="caption">
						<h4><%= team.name %></h4>
					</div>
					<div class="caption">
						<h4><%= team.description %></h4>
					</div>
					<div>
						<a href="/team/join/<%= team._id %>">Join</a>
					</div>
				</div>
			</div>
		<%});%>
	</div>

</div>

<%- include("partials/footer") %>
